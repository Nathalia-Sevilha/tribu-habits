<%= render "shared/header", title: "New post - #{@community.title}" %>

<section class="container" >
  <div class="card_style">
    <%= form_with(model: [@community, @post], local: true) do |f| %>
    <div class="mt-1">
      <%= f.label :title, "title" , class: "m-1"%>
      <%= f.text_field :title, rows: 4, class: "form-control" %>
    </div>
    <div class="mt-3">
      <%= f.label :content, "post" , class: "m-1"%>
      <%= f.text_area :content, rows: 4, class: "form-control" %>
    </div>

  <div class=" d-flex flex-row justify-content-start align-items-center py-4">
      <%= f.submit "Create", class:"btn-small" %>
      <%= link_to "Cancel", community_path(@community), class: "btn btn-secondary ms-2" %>
  </div>
  <% end %>
  </div>
</section>
