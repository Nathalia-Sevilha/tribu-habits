<div class="habit-container">
  <h1 class="habit-title">
    <span style="color: #<%= @habit.color %>">‚óè</span>
    <%= @habit.title %>
  </h1>
  
  <div class="habit-info">
    <p><%= @habit.description %></p>
    <p class="habit-streak">
      <i class="fas fa-fire"></i> Streak: <%= @habit.streak %>
    </p>
  </div>

  <div class="habit-actions">
    <%= link_to edit_habit_path(@habit), class: "habit-btn edit" do %>
      <i class="fas fa-edit"></i> Edit
    <% end %>
    
    <%= link_to habit_path(@habit), 
        class: "habit-btn delete",
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <i class="fas fa-trash"></i> Delete
    <% end %>
    
    <%= link_to habits_path, class: "habit-btn back" do %>
      <i class="fas fa-arrow-left"></i> Back
    <% end %>
  </div>
</div>
