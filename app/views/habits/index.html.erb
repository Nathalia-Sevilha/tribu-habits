<h1>Habits List</h1>
<%= link_to "new Habit", preselect_habits_path %>
<ul>
  <% @habits.each do |habit| %>
    <li>
      <%= link_to habit.title, habit_path(habit) %>
      (<%= link_to "Edit", edit_habit_path(habit) %> |
<%= link_to "Delete", habit_path(habit), data: { turbo_method: :delete, turbo_confirm: "Delete ?" } %>)
    </li>
  <% end %>
</ul>
