<div class="habits-container">
  <h1 class="habits-title">My Habits</h1>
  
  <%= link_to new_habit_path, class: "new-habit-btn" do %>
    <i class="fas fa-plus"></i> New Habit
  <% end %>

  <ul class="habits-list">
    <% @habits.each do |habit| %>
      <li>
        <%= link_to habit_path(habit) do %>
          <span style="color: #<%= habit.color %>">●</span>
          <%= habit.title %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
