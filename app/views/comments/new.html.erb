<%= render "shared/header", title: "Add Comment to: #{@post.title}" %>

<section class="container" >
  <div class="card_style">
    <%= form_with(model: [@community, @post, @comment], local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :content, "Add a comment" , class: "mb-4"%>
        <%= f.text_area :content, rows: 4, class: "form-control" %>
      </div>

      <div class=" d-flex flex-row justify-content-start align-items-center py-2">
        <%= f.submit "Create", class:"btn btn-small w-75" %>
        <%= link_to "Cancel", community_post_path(@community, @post), class: "btn_cancel mx-2 w-50" %>
      </div>
    <% end %>
  </div>
</section>
