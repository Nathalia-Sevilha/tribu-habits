

<div class=" comminity_style">

  <section class="p-2 shadow-sm bg-white" >
    <h1><%= @community.title %></h1>
  </section>

  <section class="container" >
    <% @posts.each do |post| %>
        <div class="card_style">
        <div class="d-flex flex-row justify-content-between align-items-center mb-2">
          <div class="d-flex flex-row justify-content-start align-items-center">
            <div style="border-radius: 50%; height: 40px; width: 40px; background: var(--orange);"></div>
            <h5  class="m-0 mx-2"><%= post.user.username %> <%# here should be post writer username %></h5>
          </div>
          <div>
             <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
          </div>
        </div>
        <h3><%= post.title %></h3>
        <p><%= post.content %></p>
        <div class="d-flex flex-row justify-content-between">
        <div class="d-flex flex-row justify-content-end align-items-center">
          <i class="fa-regular fa-comment-dots " style="margin-right:5px"></i>
          <p class=" my-0">Comments</p>
        </div>
        <%= link_to "Add a comment", community_post_path(@community, post),class: "fw-semibold text-decoration-none", style: "color: var(--orange) !important" %>
        </div>
      </div>
    <% end %>
  </section>



</div>
